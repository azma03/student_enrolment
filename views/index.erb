<h1>All the Students</h1>
<table class="center">
 <tr>
     <th>First Name</th>
     <th>Last Name</th>
     <th>House</th>
     <th>Age</th>
 </tr>

    <% for student in @students %>
    <tr>
      <td><%= student.first_name %></td>
      <td><%= student.last_name %></td>
      <td><%= student.show_house().name %></td>
      <td><%= student.age %></td>
    </tr>
    <% end %>

</table>

<ul>
  <li><a href="/student-enrolment/new">Enrol New Student</a></li>
</ul>
